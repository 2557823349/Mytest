image {
    position: absolute;
    left: 0;
    bottom: 0;
    display: block;
    width: 100%;
    height: 100%;
    z-index: -999;
}
.main-content{
    margin-top: 68%;
    text-align: center;
}
.name{
    position: relative;
}
.name > image{
